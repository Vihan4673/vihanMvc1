<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project_01.Controller.Booking.BillViewController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-underline: true;" text="WIMAL VILLA" />

    <Label fx:id="lblDateTime" style="-fx-font-size: 12px; -fx-text-fill: gray;" />

    <Separator prefWidth="300" />

    <Label fx:id="lblGuestPhone" style="-fx-font-size: 16px;" />
    <Label fx:id="lblTotalAmount" style="-fx-font-size: 16px;" />
    <Label fx:id="lblPaidAmount" style="-fx-font-size: 16px;" />
    <Label fx:id="lblPaymentMethod" style="-fx-font-size: 16px;" />
    <Label fx:id="lblBalance" style="-fx-font-size: 16px;" />

    <Separator prefWidth="300" />

    <Button onAction="#handleClose" style="-fx-font-size: 14px; -fx-padding: 6 20 6 20;" text="Close" />
</VBox>
