<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="750.0" prefWidth="1000.0" spacing="25.0" style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #f1f8e9);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project_01.Controller.SupplierDetailPageController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>
    <children>

        <Label text="SUPPLIER MANAGEMENT" textFill="#114396">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <VBox spacing="15.0" VBox.vgrow="NEVER">
            <style>-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #CFD8DC; -fx-border-width: 1px; -fx-border-radius: 10;</style>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
            <children>
                <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Supplier ID:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font><Font name="Calibri" size="16.0" /></font>
                        </Label>
                        <Label fx:id="lblSupplierId" text="Auto Generated" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <font><Font name="Calibri Bold" size="16.0" /></font>
                            <style>-fx-text-fill: #4CAF50;</style>
                        </Label>

                        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <font><Font name="Calibri" size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtName" promptText="Enter Supplier Name" style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-width: 1px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font><Font size="15.0" /></font>
                        </TextField>

                        <Label text="NIC:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <font><Font name="Calibri" size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtNic" promptText="Enter NIC (e.g., 000000000V or 200000000000)" style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-width: 1px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <font><Font size="15.0" /></font>
                        </TextField>

                        <Label text="Address:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <font><Font name="Calibri" size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtAddress" promptText="Enter Address" style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-width: 1px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                            <font><Font size="15.0" /></font>
                        </TextField>

                        <Label text="Phone:" GridPane.columnIndex="2" GridPane.rowIndex="2">
                            <font><Font name="Calibri" size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtPhone" promptText="Enter Phone (e.g., 07XXXXXXXX)" style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-width: 1px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" GridPane.columnIndex="3" GridPane.rowIndex="2">
                            <font><Font size="15.0" /></font>
                        </TextField>

                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <font><Font name="Calibri" size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtEmail" promptText="Enter Email (e.g., email@example.com)" style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-width: 1px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <font><Font size="15.0" /></font>
                        </TextField>

                        <Label text="Supply:" GridPane.columnIndex="2" GridPane.rowIndex="3">
                            <font><Font name="Calibri" size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtSupply" promptText="Items/Services Supplied" style="-fx-background-color: #F5F5F5; -fx-border-color: #D3D3D3; -fx-border-width: 1px; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" GridPane.columnIndex="3" GridPane.rowIndex="3">
                            <font><Font size="15.0" /></font>
                        </TextField>
                    </children>
                </GridPane>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
            <children>
                <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #26A69A; -fx-text-fill: white; -fx-background-radius: 8;" text="Save">
                    <font><Font name="Calibri Bold" size="16.0" /></font>
                </Button>
                <Button fx:id="btnUpdate" onAction="#btnUpdateOnAction" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #5C6BC0; -fx-text-fill: white; -fx-background-radius: 8;" text="Update">
                    <font><Font name="Calibri Bold" size="16.0" /></font>
                </Button>
                <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #EF5350; -fx-text-fill: white; -fx-background-radius: 8;" text="Delete">
                    <font><Font name="Calibri Bold" size="16.0" /></font>
                </Button>
                <Button fx:id="btnReset" onAction="#btnResetOnAction" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #B0BEC5; -fx-text-fill: white; -fx-background-radius: 8;" text="Reset">
                    <font><Font name="Calibri Bold" size="16.0" /></font>
                </Button>
                <Button fx:id="btnSendEmail" onAction="#btnSendEmailOnAction" prefHeight="45.0" prefWidth="150.0" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-background-radius: 8;" text="Send Email">
                    <font><Font name="Calibri Bold" size="16.0" /></font>
                </Button>
            </children>
        </HBox>

        <TableView fx:id="tblSupplier" onMouseClicked="#onClickTable" style="-fx-background-color: white; -fx-border-color: #CFD8DC; -fx-border-width: 1px; -fx-border-radius: 10; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" text="Supplier ID" />
                <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="colNic" prefWidth="130.0" text="NIC" />
                <TableColumn fx:id="colAddress" prefWidth="180.0" text="Address" />
                <TableColumn fx:id="colPhone" prefWidth="120.0" text="Phone" />
                <TableColumn fx:id="colEmail" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="colSupply" prefWidth="180.0" text="Supply" />
            </columns>
        </TableView>
    </children>
</VBox>
